<?xml version="1.0" ?>
<project name="Optix Test" width=1024 height=512>
	<assets>
		<scenes>
			<scene name="MainScene" >
				<file name="../models/dragon/dragon.obj" />
			</scene>
		</scenes>
		<viewports>
			<viewport name="RightViewport" >
				<ORIGIN x="0.5" y="0" />
				<SIZE width="0.5" height="1.0" />
				<CLEAR_COLOR r="0.5" g="0.0" b="0.0" />
			</viewport>
			<viewport name="LeftViewport" fixed="true">
				<ORIGIN x="0.0" y="0" />
				<SIZE width="0.5" height="1.0" />
				<CLEAR_COLOR r="0.0" g="0.5" b="0.0" />
			</viewport>
		</viewports>
		<cameras>
			<camera name="MainCamera" >
				<viewport name="LeftViewport" />
				<projection TYPE="PERSPECTIVE" FOV=60.0 NEAR=0.3 FAR=1000.0 />
				<POSITION x="-2.0" y="1.8" z="0.0" />
				<VIEW x="0.901307" y="-1.0" z="-0.238421" /> 
				<UP x="0.0" y="1.0" z="0.0" />
			</camera>
		</cameras>
		<lights>
			<light name="Sun" >
				<POSITION x="-52" y="77.0" z="-27.0" />
				<DIRECTION x="0.597" y="-0.390" z="0.700" />
				<COLOR r="0.9" g="0.9" b="0.9" />
				<AMBIENT r="0.5" g="0.5" b="0.5" />
			</light>
		</lights>
		<materialLibs>   
			<materialLib filename="raytracing.mlib"/>
		</materialLibs>
	</assets>
	<pipelines>
		<pipeline name="raytracing" default="true">

			<pass class="rt" name="pass1">
				<scenes>
					<scene name="MainScene" />
				</scenes>
				<camera name="MainCamera" />
				<renderTarget name="test" fromLibrary="Raytracing" />
				<lights>
					<light name="Sun" />
				</lights>

				
				<rtRayTypes>
					<rayType name="Fence" />
					<rayType name="Glass" />
				</rtRayTypes>

				<rtVertexAttributes>
					<attribute name="position"/>
					<attribute name="normal"/>
					<attribute name="texCoord0"/>
				</rtVertexAttributes>

				<rtEntryPoint>
					<rayGen file="optix/raytracing.ptx" proc="__raygen__renderFrame"/> 
				</rtEntryPoint>
				<rtDefaultMaterial>
					<rayType name="Lambert">
						<rtProgram type="ANY_HIT" file="optix/raytracing.ptx" proc="__anyhit__lambert"/> 
						<rtProgram type="CLOSEST_HIT" file="optix/raytracing.ptx" proc="__closesthit__lambert"/> 
						<rtProgram type="MISS" 		 file="optix/raytracing.ptx" proc="__miss__lambert"/> 
					</rayType>
					<<rayType name="Phong">
						<rtProgram type="ANY_HIT" file="optix/raytracing.ptx" proc="__anyhit__phong" /> 
						<rtProgram type="CLOSEST_HIT" file="optix/raytracing.ptx" proc="__closesthit__phong" /> 
						<rtProgram type="MISS" 		 file="optix/raytracing.ptx" proc="__miss__phong" /> 
					</rayType>>
				</rtDefaultMaterial>

				<rtMaterialMap>
                    <rtMap to = "Grade*">
						<!-- Diffuse + Ambient -->
						<rayType name="Lambert">
                            <rtProgram type="ANY_HIT" file="optix/testOptix6.ptx" proc="__anyhit__shadow_alphaTrans"/> 
                            <rtProgram type="CLOSEST_HIT" file="optix/testOptix6.ptx" proc="__closesthit__shadow_alphaTrans"/> 
                            <rtProgram type="MISS" 		 file="optix/testOptix6.ptx" proc="__miss__shadow_alphaTrans"/> 
                        </rayType>

						<!-- Specular -->
                        <rayType name="Phong">
                            <rtProgram type="ANY_HIT" file="optix/testOptix6.ptx" proc="__anyhit__phong_alphaTrans"/> 
                            <rtProgram type="CLOSEST_HIT" file="optix/testOptix6.ptx" proc="__closesthit__phong_alphaTrans"/> 
                            <rtProgram type="MISS" 		 file="optix/testOptix6.ptx" proc="__miss__phong_alphaTrans"/> 
                        </rayType>
                        
                    </rtMap>
                    <rtMap to = "Vidro">
                        <rayType name="Phong">
                            <rtProgram type="ANY_HIT" file="optix/testOptix6.ptx" proc="__anyhit__phong_glass"/> 
                            <rtProgram type="CLOSEST_HIT" file="optix/testOptix6.ptx" proc="__closesthit__phong_glass"/> 
                            <rtProgram type="MISS" 		 file="optix/testOptix6.ptx" proc="__miss__phong_glass"/> 
                        </rayType>
                        <rayType name="Shadow">
                            <rtProgram type="ANY_HIT" file="optix/testOptix6.ptx" proc="__anyhit__shadow_glass"/> 
                            <rtProgram type="CLOSEST_HIT" file="optix/testOptix6.ptx" proc="__closesthit__shadow_glass"/> 
                            <rtProgram type="MISS" 		 file="optix/testOptix6.ptx" proc="__miss__shadow_glass"/> 
                        </rayType>
                    </rtMap>
                </rtMaterialMap>
			</pass>

			<pass class="quad" name="pass2">
				<viewport name="RightViewport" />
				<texture name="offscreenrender" fromLibrary="Raytracing" />
			</pass>

			<pass class="default" name="pass3">
				<scenes>
					<scene name="MainScene" />
				</scenes>
				<camera name="MainCamera" />
				<viewport name="LeftViewport" />
				<lights>
					<light name="Sun" />
				</lights>
			</pass> 

		</pipeline>
	</pipelines>
</project>